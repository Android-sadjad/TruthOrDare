<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_gravity="center"
    android:id="@+id/cl_bottle_video"



    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_15sdp"
        android:id="@+id/cl_inner_bottle_video"
        android:background="@drawable/dialog_bg_wood"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_video_text"
            android:fontFamily="@font/lalezar_regular"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_yes_select_dialog"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_35sdp"
        android:backgroundTint="@color/center_color_gradiant"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@id/cl_inner_bottle_video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cv_no_select_dialog"
        app:layout_constraintTop_toBottomOf="@id/cl_inner_bottle_video"
        app:strokeColor="@color/start_color_gradiant"
        app:strokeWidth="@dimen/_3sdp"

        >

        <TextView
            android:id="@+id/tv_yes_select_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/lalezar_regular"
            android:gravity="center"
            android:text="@string/lets_go"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_no_select_dialog"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_35sdp"
        android:backgroundTint="@color/center_color_gradiant"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@id/cl_inner_bottle_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cv_yes_select_dialog"
        app:layout_constraintTop_toBottomOf="@id/cl_inner_bottle_video"
        app:strokeColor="@color/start_color_gradiant"
        app:strokeWidth="@dimen/_3sdp"
        >

        <TextView
            android:id="@+id/tv_no_select_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/lalezar_regular"

            android:gravity="center"
            android:text="@string/no_matter"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>