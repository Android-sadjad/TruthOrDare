<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_gravity="center"
    android:background="#A6D7DF"
    android:weightSum="6"
    android:id="@+id/ll_add_dialog"
    >


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:text="افزودن سوال"
       android:textSize="@dimen/_20sdp"
       android:layout_marginTop="@dimen/_10sdp"
       android:layout_weight="1"
       />
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="سوال خود را وارد کنید"
      android:layout_margin="@dimen/_15sdp"
        android:layout_weight="3"
        android:layoutDirection="rtl"
        android:gravity="top"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_text_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="3"
            android:layoutDirection="rtl"
            android:gravity="top"

            />


    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_weight="1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_truth"
            android:layout_marginRight="@dimen/_10sdp"
            android:checked="true"
            android:text="حقیقت"/>



        <RadioButton
            android:id="@+id/rb_dare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"

            android:text="جرعت"/>


    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp"


        >

        <Button
            android:id="@+id/btn_close_add_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="بستن"


            />


        <Button
            android:id="@+id/btn_add_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="افزودن"

            />
    </LinearLayout>









</LinearLayout>