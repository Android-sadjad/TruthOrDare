<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1D1A1"

    >




    <com.google.android.material.tabs.TabLayout
        android:id="@+id/my_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        />





    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/my_view_pager"
        app:layout_constraintTop_toBottomOf="@+id/my_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        >





    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/ll_guide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/_50sdp"
        android:background="#6F787575"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هنوز سوالی اضافه نشده"
        android:textSize="@dimen/_23sdp"



        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="با زدن روی دکمه پلاس \nسوال خود را اضافه کنید"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:lines="2"


            />

   </LinearLayout>



<com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_plus_float_btn"
        android:backgroundTint="@color/white"
        android:id="@+id/float_btn"

        />



</androidx.constraintlayout.widget.ConstraintLayout>