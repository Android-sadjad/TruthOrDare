<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_about_us"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cl_about_us_dialog_height"
    android:layout_gravity="center"
    android:padding="@dimen/_5sdp"

    >



    <TextView
        android:id="@+id/tv_title_add"
        style="@style/title_dialog_style"
        android:layout_width="match_parent"
        android:text="@string/add_question"
        app:layout_constraintBottom_toTopOf="@id/iv_inner_about_us_dialog"
        app:layout_constraintTop_toTopOf="@id/iv_inner_about_us_dialog"

        />

    <ImageView
        android:id="@+id/iv_inner_about_us_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_20sdp"
        android:background="@drawable/board_dialog" />



    <TextView
        android:id="@+id/tv_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_6sdp"
        android:text="@string/developer_team_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_22sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_title_add"

        />

    <ImageView
        android:id="@+id/iv_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_team"

        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:text="@string/email"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/iv_horizontal_divider"

        />


    <TextView
        android:id="@+id/tv_developerrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:text="@string/developers_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_email"

        />


</androidx.constraintlayout.widget.ConstraintLayout>