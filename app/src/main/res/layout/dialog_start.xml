<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_start_dialog"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_500sdp"
    android:layout_gravity="center">

    <View
        android:id="@+id/view_start_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/wood6"
        app:layout_constraintBottom_toBottomOf="@id/tv_start_game"
        app:layout_constraintTop_toTopOf="@id/tv_choose" />

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="center"
        android:background="@drawable/woodbg"
        android:gravity="center"
        android:text="@string/select_player"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/questions_list"
        android:textColor="@color/white"
        android:textSize="@dimen/_22sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_choose" />

    <LinearLayout
        android:id="@+id/ll_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="#9C5E4A"
        android:gravity="right"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_list_question">

        <Switch
            android:id="@+id/switch_default_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_questions"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <Switch
            android:id="@+id/switch_my_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_questions"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />


    </LinearLayout>


    <com.google.android.material.slider.Slider
        android:id="@+id/slider_player_number"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layoutDirection="rtl"
        android:stepSize="1"
        android:value="2.0"
        android:valueFrom="2.0"
        android:valueTo="9.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_check_box"
        app:thumbColor="@color/white"
        app:thumbElevation="@dimen/_50sdp"
        app:thumbRadius="@dimen/_10sdp"
        app:tickColor="@color/black"
        app:trackColor="@color/purple_700"
        app:trackHeight="@dimen/_9sdp"

        />

    <TextView
        android:id="@+id/tv_player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_number"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slider_player_number" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/tv_start_game"
        app:layout_constraintTop_toBottomOf="@id/tv_player_number"

        >

        <LinearLayout
            android:id="@+id/ll_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_player_number">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/cl_player_name_1"
                style="@style/cl_name_and_avatar_style"
                android:visibility="visible"

                >

                <ImageView
                    android:id="@+id/iv_avatar_1"
                    style="@style/iv_avatar_style"
                    android:background="@drawable/avatar"
                    app:layout_constraintBottom_toBottomOf="@id/til_player_1"
                    app:layout_constraintLeft_toLeftOf="@id/til_player_1"
                    app:layout_constraintTop_toTopOf="@id/til_player_1"


                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_player_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/player_name_1"
                    android:layoutDirection="rtl"
                    app:hintTextColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_player_1"
                        style="@style/et_player_name_style" />


                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_player_name_2"
                style="@style/cl_name_and_avatar_style"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_avatar_2"
                    style="@style/iv_avatar_style"
                    android:background="@drawable/avatar"
                    app:layout_constraintBottom_toBottomOf="@id/til_player_2"
                    app:layout_constraintLeft_toLeftOf="@id/til_player_2"
                    app:layout_constraintTop_toTopOf="@id/til_player_2"


                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_player_2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/player_name_2"
                    android:layoutDirection="rtl"
                    app:hintTextColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_player_2"
                        style="@style/et_player_name_style" />


                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

