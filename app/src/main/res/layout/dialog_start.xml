<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_500sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/cl_start_dialog"
    android:background="@drawable/wood6"

    >

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_70sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:text="انتخاب بازیکن"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/woodbg"

        />

    <com.google.android.material.slider.Slider
        android:id="@+id/seek_count"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_choose"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:stepSize="1"
        android:value="2.0"
        android:valueFrom="2.0"
        android:valueTo="9.0"
        app:thumbColor="@color/white"
        app:tickColor="@color/black"
        app:trackColor="@color/purple_700"
        app:thumbRadius="@dimen/_10sdp"
        app:thumbElevation="@dimen/_50sdp"
        app:trackHeight="@dimen/_9sdp"

        />
    <TextView
        android:id="@+id/tv_player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seek_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="تعداد بازیکن:"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

<LinearLayout
    android:id="@+id/ll_edit_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_15sdp"
    app:layout_constraintTop_toBottomOf="@id/tv_player_number"


    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"


    >

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:background="@drawable/avatar"



        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#00000000"
        android:hint="نام بازیکن"
        app:hintTextColor="@color/black"
        >



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center|right"
            android:textStyle="bold"
            android:inputType="phone" />


    </com.google.android.material.textfield.TextInputLayout>




</LinearLayout>




</LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>