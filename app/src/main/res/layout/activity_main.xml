<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".activity.MainActivity"
    tools:openDrawer="right">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3885A0"
        tools:context=".activity.MainActivity">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gi_water"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ocean"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


            />

        <include
            android:id="@+id/lay"
            layout="@layout/view_toolbar" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_menu_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >


            <ImageView
                android:id="@+id/tv_show_start_dialog"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:background="@drawable/wood_circle_dark"
                android:focusable="false"
                android:onClick="onClick"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lalezar_regular"
                android:gravity="center"
                android:text="@string/start_game"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="@id/tv_show_start_dialog"
                app:layout_constraintLeft_toLeftOf="@id/tv_show_start_dialog"
                app:layout_constraintRight_toRightOf="@id/tv_show_start_dialog"
                app:layout_constraintTop_toTopOf="@id/tv_show_start_dialog" />

            <LinearLayout
                android:id="@+id/ll_question"
                android:layout_width="match_parent"
                style="@style/ll_main_btn_style"
                app:layout_constraintTop_toBottomOf="@id/tv_show_start_dialog">


                <TextView
                    android:id="@+id/tv_my_question"
                    style="@style/tv_main_menu_style"
                    android:text="@string/my_questions"
                  />

                <TextView
                    android:id="@+id/tv_default_questions"
                    style="@style/tv_main_menu_style"
                    android:text="@string/default_questions"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                style="@style/ll_main_btn_style"
                app:layout_constraintTop_toBottomOf="@id/ll_question">

                <TextView
                    android:id="@+id/tv_hemayat"
                    style="@style/tv_main_menu_style"
                    android:text="@string/support_from_us"
                    />

                <TextView
                    android:id="@+id/tv_comment"
                    style="@style/tv_main_menu_style"
                    android:text="@string/comment"

                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:id="@+id/standardBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navigation_view"
        style="@style/navigation_view_style"
        android:visibility="gone"
 />


</androidx.drawerlayout.widget.DrawerLayout>


