<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="right"
    android:keepScreenOn="true"

    tools:context=".activity.MainActivity"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grassbg"
        tools:context=".activity.MainActivity">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/menubtn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/_100sdp"
            />

        <FrameLayout
            android:id="@+id/fl_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/_20sdp">

        </FrameLayout>

        <TextView
            android:id="@+id/tv_show_start_dialog"
            style="@style/tv_main_menu_style"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:text="شروع بازی"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_my_question"
            style="@style/tv_main_menu_style"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="سوالات من"
            app:layout_constraintLeft_toRightOf="@id/tv_questions_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_show_start_dialog" />

        <TextView
            android:id="@+id/tv_questions_list"
            style="@style/tv_main_menu_style"
            android:text="لیست سوالات"
            app:layout_constraintBottom_toBottomOf="@id/tv_my_question"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_my_question"
            app:layout_constraintTop_toTopOf="@id/tv_my_question" />

        <TextView
            android:id="@+id/tv_hemayat"
            style="@style/tv_main_menu_style"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="حمایت از ما"
            app:layout_constraintLeft_toRightOf="@id/tv_comment"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_question" />

        <TextView
            android:id="@+id/tv_comment"
            style="@style/tv_main_menu_style"
            android:text="ثبت نظر"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_hemayat"
            app:layout_constraintTop_toTopOf="@id/tv_hemayat"

            />

        <TextView
            android:id="@+id/tv_exit"
            style="@style/tv_main_menu_style"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="خروج"
            app:layout_constraintTop_toBottomOf="@id/tv_hemayat"
            app:layout_constraintRight_toRightOf="@id/tv_hemayat"
            />

        <TextView
            android:id="@+id/tv_setting"
            style="@style/tv_main_menu_style"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="تنظیمات"
            app:layout_constraintRight_toRightOf="@id/tv_comment"
            app:layout_constraintTop_toBottomOf="@id/tv_comment"


            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navigation_view"
        android:background="#162901"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layoutDirection="rtl"
        app:itemTextColor="#ffffff"
        app:itemIconTint="#ffffff"
        app:menu="@menu/navigation_view_menu"
        />
</androidx.drawerlayout.widget.DrawerLayout>


