<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grassbg"
    android:clickable="true"
    android:focusable="true">


    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/setting_ic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/menubtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_bottle"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/bottle_test"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/iv_circle_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_circle_background">

    </ImageView>

    <ImageView
        android:id="@+id/iv_circle_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/circle4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <LinearLayout
        android:id="@+id/ll_names_and_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/wood6"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp"


        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_7"
                    style="@style/tv_names_style"
                    android:text="محمدعلی" />

                <ImageView
                    android:id="@+id/iv_color_7"
                    style="@style/iv_colors_style"
                    android:background="@color/black" />


            </LinearLayout>

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_8"
                    style="@style/tv_names_style"
                    android:text="محمد" />

                <ImageView
                    android:id="@+id/iv_color_8"
                    style="@style/iv_colors_style"
                    android:background="@color/purple_500" />

            </LinearLayout>

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_9"
                    style="@style/tv_names_style"
                    android:text="علی" />

                <ImageView
                    android:id="@+id/iv_color_9"
                    style="@style/iv_colors_style"
                    android:background="@color/white" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_4"
                    style="@style/tv_names_style"
                    android:text="الناز" />

                <ImageView
                    android:id="@+id/iv_color_4"
                    style="@style/iv_colors_style"
                    android:background="@color/teal_700" />
            </LinearLayout>

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_5"
                    style="@style/tv_names_style"
                    android:text="مهری" />

                <ImageView
                    android:id="@+id/iv_color_5"
                    style="@style/iv_colors_style"
                    android:background="#0B1A6C" />
            </LinearLayout>

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_6"
                    style="@style/tv_names_style"
                    android:text="سینا" />

                <ImageView
                    android:id="@+id/iv_color_6"
                    style="@style/iv_colors_style"
                    android:background="#8BC34A" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_1"
                    style="@style/tv_names_style"
                    android:text="سعید"

                    />

                <ImageView
                    android:id="@+id/iv_color_1"
                    style="@style/iv_colors_style"
                    android:background="#DDCA1E" />
            </LinearLayout>

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_2"
                    style="@style/tv_names_style"
                    android:text="نازنین فاطمه" />

                <ImageView
                    android:id="@+id/iv_color_2"
                    style="@style/iv_colors_style"
                    android:background="#035707" />
            </LinearLayout>

            <LinearLayout style="@style/ll_horizontal_color_and_name_style">

                <TextView
                    android:id="@+id/tv_name_3"
                    style="@style/tv_names_style"
                    android:text="محمدیاسین" />

                <ImageView
                    android:id="@+id/iv_color_3"
                    style="@style/iv_colors_style"
                    android:background="#E30808" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    


        <LinearLayout
            android:id="@+id/ll_truth_dare"
            android:background="@color/purple_700"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            android:weightSum="2"

            >



            <Button
                android:id="@+id/btn_dare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="جرعت"
                android:layout_marginRight="@dimen/_5sdp"


                />


            <Button
android:id="@+id/btn_truth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="حقیقت"

                />



        </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_question"
        android:background="@color/purple_700"
        android:layout_width="match_parent"

        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:weightSum="6"


        >

        <TextView
            android:id="@+id/tv_tod"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingTop="@dimen/_5sdp"
            android:text="حقیقت"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_weight="2"

            />

        <TextView
            android:id="@+id/tv_qustion"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="آخرین بار کی آب خوردی؟"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_weight="2"


            />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="2"
    android:layoutDirection="ltr"


    >
        <Button
            android:id="@+id/btn_change_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="تغییر سوال"
            android:layout_marginRight="@dimen/_5sdp"


            />


        <Button
            android:id="@+id/btn_close_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="بستن"

            />
</LinearLayout>



    </LinearLayout>





    
    
    

</androidx.constraintlayout.widget.ConstraintLayout>