<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp"
    android:background="#749BD6"
    android:layout_gravity="center"
    android:id="@+id/cl_about_us"

    >

    <TextView
        android:id="@+id/tv_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
     android:gravity="center"
        android:text="تیم توسعه دهنده ی گوگولی"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="@dimen/_6sdp"

        />

    <ImageView
        android:id="@+id/iv_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_team"

        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_horizontal_divider"
        android:text="Email : m.aliattarr@gmial.com"
        android:textSize="@dimen/_18sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textColor="@color/black"

/>


    <TextView
        android:id="@+id/tv_developerrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        android:text="برنامه نویس ها:\nمحمدعلی عطار علیایی\nمحمد یزدی"
        android:textSize="@dimen/_18sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textColor="@color/black"

        />


</androidx.constraintlayout.widget.ConstraintLayout>