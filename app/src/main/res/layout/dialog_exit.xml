<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/cl_exit"
    android:background="#2196F3"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="آیا میخواهید خارج شوید؟"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:id="@+id/exit_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/exit_horizental_line"
        app:layout_constraintTop_toBottomOf="@id/exit_txt"
        android:background="@color/black"
        android:layout_marginTop="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="right"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/exit_horizental_line"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خیر"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:layout_weight="1"
            android:id="@+id/cancle_btn"


            />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بله"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:layout_weight="1"
            android:id="@+id/ok_btn"
            android:textStyle="bold"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>