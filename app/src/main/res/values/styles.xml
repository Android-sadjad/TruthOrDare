<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="tv_main_menu_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/tv_main_height</item>
        <item name="android:background">@drawable/new_wood_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_19sdp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>


    </style>

    <style name="ll_main_tv_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>

    </style>

    <style name="toolbar_iv_style">

        <item name="android:layout_width">@dimen/_45sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onClick</item>
        <item name="android:padding">@dimen/_4sdp</item>


    </style>

    <style name="ll_horizontal_color_and_name_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right|center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>

    </style>

    <style name="ll_vertical_color_and_name_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="tv_names_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginRight">@dimen/_2sdp</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>


    </style>

    <style name="iv_colors_style">

        <item name="android:layout_width">@dimen/_22sdp</item>
        <item name="android:layout_height">@dimen/_22sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="iv_avatar_style">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cl_name_and_avatar_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="et_player_name_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:lines">1</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/brown_500</item>


    </style>

    <style name="hint_style">
        <item name="android:textSize">@dimen/_14sdp</item>


    </style>

    <style name="switch_setting_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/lalezar_regular</item>

    </style>

    <style name="title_dialog_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:background">@drawable/header_wood</item>
        <item name="android:layout_marginLeft">@dimen/_50sdp</item>
        <item name="android:layout_marginRight">@dimen/_50sdp</item>


    </style>

    <style name="text_dialog_style">

        <item name="android:layout_height">@dimen/_150sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_23sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/board_dialog</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:layout_marginBottom">@dimen/_25sdp</item>


    </style>

    <style name="ll_dialog_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:orientation">horizontal</item>


    </style>

    <style name="btn_dialog_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/wood_new_btn</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>


    </style>

    <style name="ll_truth_dare_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:orientation">horizontal</item>


    </style>

    <style name="btn_truth_dare_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_blue_wood</item>
        <item name="android:layout_marginRight">@dimen/_3sdp</item>
        <item name="android:layout_marginLeft">@dimen/_3sdp</item>


    </style>

    <style name="til_name_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="boxStrokeColor">@color/brown900</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="hintTextColor">@color/brown900</item>
        <item name="hintTextAppearance">@style/hint_style</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>


    </style>

    <style name="navigation_view_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@color/navigation_view_bg_color</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="itemBackground">@drawable/rectangle_brown_strok</item>
        <item name="itemIconSize">@dimen/_25sdp</item>
        <item name="itemTextAppearance">@style/hint_style</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="menu">@menu/navigation_view_menu</item>


    </style>

    <style name="cv_setting_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/ice_card</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>

    </style>

    <style name="ll_setting_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:orientation">horizontal</item>

    </style>
    <style name="tv_setting_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="view_brace_setting_style">
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:layout_width">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:background">@drawable/aculade_view_setting</item>
    </style>

    <style name="ll_switch_setting_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:gravity">center|right</item>
        <item name="android:orientation">vertical</item>

    </style>


</resources>





